<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>商铺信息</title>
    <link rel="stylesheet" href="../media/layui/css/layui.css">
    <script>

    </script>
</head>
<body>
<div class="layui-container">
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>商铺列表</legend>
    </fieldset>
    <div class="layui-row" style="margin-top: 10px">
        <div class="layui-col-xs3" style="margin-right: 20px">
            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">搜索：</label>
                <div class="layui-input-block">
                    <input type="text" id="keyword" name="keyword" class="layui-input" placeholder="请输入关键字">
                    <p style="font-size:5px;color:red">默认查询所有符合条件的字段</p>
                </div>
            </div>
        </div>
        <div class="layui-col-xs3" style="margin-right: 20px">
            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">选择条件：</label>
                <div class="layui-input-block">
                    <select class="layui-input" id="fg">
                        <option value="1" id="default">默认</option>
                        <option value="1" id="sname">商铺名</option>
                        <option value="2" id="pname">联系人</option>
                        <option value="3" id="pho">电话</option>
                        <option value="3" id="addr">地址</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="layui-col-xs2">
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <!--<button class="layui-btn" id="selectbyCondition" onclick="searchData()"><i class="layui-icon layui-icon-search">搜索</i>-->
                    <button class="layui-btn layui-btn-normal" onclick="ConditionalSearch()" data-type="reload"
                            id="selectbyCondition">搜索
                    </button>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <table id="personlist" lay-filter="test"></table>
</div>

<script type="application/javascript" src="../media/layui/layui.js"></script>
<script type="application/javascript" src="../media/js/jquery.min.js"></script>
<script>
    function ConditionalSearch(){
        var fg = $("#fg").text();
        if(fg=="商铺名"){

        }if(fg=="联系人"){

        }if(fg=="电话"){

        }if(fg=="地址"){

        }if(fg=="默认"){

        }

    }
    layui.use('table', function () {
        var table = layui.table;
        //商铺列表
        table.render({
            elem: '#personlist'
            , height: 312
            , url: '../paging.do' //数据接口
            , page: true
            , limit: 5
            , limits: [5, 10, 15]
            , id: "keyword"
            , cols: [[ //表头
                {field: 'id', title: 'ID', sort: true, fixed: 'left'}
                , {field: 'shopname', title: '商铺名', templet: '#shopname'}
                , {field: 'personname', title: '联系人', sort: true}
                , {field: 'sex', title: '性别'}
                , {field: 'birthday', title: '生日',}
                , {field: 'phone', title: '电话', sort: true}
                , {field: 'address', title: '地址', sort: true}
                , {field: 'phonetype', title: '手机型号',}
                , {field: 'createdate', title: '注册时间', sort: true}
                , {field: 'phoneip', title: 'ip地址', sort: true}
            ]]
        });
        var $ = layui.$, active = {
            reload: function () {
                var keyword = $('#keyword');

                //执行重载
                table.reload('keyword', {
                    url:"../personsearch.do"
                    , page: true
                    , limit: 5
                    , limits: [5, 10, 15]
                    ,page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        id: keyword.val()
                    }
                });
            }
        };

        $('#selectbyCondition').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
    });
</script>

</body>
<script type="text/html" id="shopname">
    <!--使用templet属性把该单元格作为一个链接-->
    <a href="javascript:void(0);" onclick="popPersonDetails('{{d.id}}')" class="layui-table-link" target="_blank">{{
        d.shopname }}</a>
</script>
<script>
    function popPersonDetails(id) {
        var dataId = id;
        /*商户详情*/
        layer.open({
            area: ['1200px', '600px'],
            title: '商户详情',
            type: 1,
            content: $('#popPersonDetails'),//这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
            success: function (layero, index) {
                $.ajax({
                    url: "../personDetails.do",
                    data: "id=" + dataId,
                    dataType: "JSON",
                    success: function (data) {
                        $.each(data, function (i, n) {
                            $("#sn").val(n.shopname);
                            $("#pn").val(n.personname);
                            $("#sex").val(n.sex);
                            $("#birthday").val(n.birthday);
                            $("#phone").val(n.phone);
                            $("#address").val(n.address);
                            $("#phonetype").val(n.phonetype);
                            $("#createdate").val(n.createdate);
                            $("#phoneip").val(n.phoneip);
                        })
                    }
                })

                layui.use('table', function () {
                    var table = layui.table;
                    /*喜欢*/
                    $.ajax({
                        url: "../personLove.do",
                        data: "pid=" + dataId,
                        dataType: "JSON",
                        success: function (data1) {
                            var data1 = data1;
                            table.render({
                                elem: '#love'
                                , data: data1
                                , page: true
                                , limit: 5
                                , limits: [5, 10, 15]
                                , cols: [[
                                    {field: 'create_time', title: '创建时间', sort: true}
                                    , {field: 'personname', title: '联系人'}
                                    , {field: 'shopname', title: '商铺名', sort: true}
                                    , {field: 'address', title: '商铺地址', sort: true}
                                    , {field: 'phone', title: '电话', sort: true}
                                    , {field: 'sex', title: '性别', sort: true}
                                    , {field: 'gname', title: '商品名', sort: true}
                                ]]
                            });
                        }
                    })
                    /*浏览记录*/
                    $.ajax({
                        url: "../personRcord.do",
                        data: "pid=" + dataId,
                        dataType: "JSON",
                        success: function (data2) {
                            var data2 = data2;
                            table.render({
                                elem: '#record'
                                , data: data2
                                , page: true
                                , limit: 5
                                , limits: [5, 10, 15]
                                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                                , cols: [[
                                    {field: 'personname', title: '联系人', sort: true}
                                    , {field: 'sex', title: '性别'}
                                    , {field: 'shopname', title: '商铺名', sort: true}
                                    , {field: 'phone', title: '电话', sort: true}
                                    , {field: 'gname', title: '商品名', sort: true}
                                    , {field: 'begin_time', title: '开始浏览时间', sort: true}
                                    , {field: 'end_time', title: '结束浏览时间', sort: true}
                                ]]
                            });
                        }
                    })
                    /*登录日志*/
                    $.ajax({
                        url: "../personLoginLog.do",
                        data: "pid=" + dataId,
                        dataType: "JSON",
                        success: function (data3) {
                            var data3 = data3;
                            table.render({
                                elem: '#log'
                                , data: data3
                                , page: true
                                , limit: 5
                                , limits: [5, 10, 15]
                                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                                , cols: [[
                                    {field: 'login_time', title: '登录时间', sort: true}
                                    , {field: 'quit_time', title: '退出时间'}
                                    , {field: 'phoneip', title: 'IP地址', sort: true}
                                    , {field: 'personname', title: '联系人', sort: true}
                                    , {field: 'phone', title: '电话', sort: true}
                                    , {field: 'phonetype', title: '手机型号', sort: true}
                                    , {field: 'shopname', title: '商铺名', sort: true}
                                    , {field: 'address', title: '商铺地址', sort: true}
                                ]]
                            });
                        }
                    })
                })
            }
        })
    }

</script>

